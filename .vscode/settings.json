{
  "find-it-faster.general.hideTerminalAfterSuccess": false,
  "find-it-faster.general.restoreFocusTerminal": true,
  "typescript.tsdk": "./web/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "editor.tabSize": 2,
  "tailwindCSS.experimental.classRegex": ["class:\\s*?[\"'`]([^\"'`]*).*?,"],
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "100"],
  "editor.formatOnSave": true,
  "editor.rulers": [100],
  "editor.insertSpaces": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "black-formatter.cwd": "${workspaceFolder}/app",
  "black-formatter.args": ["--config", ".pylintrc"]
}
